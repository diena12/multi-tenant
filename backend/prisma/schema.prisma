generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id          String  @id @default(uuid())
  username    String? @db.VarChar(50)  // ユーザー名は最大50文字
  email       String  @unique @db.VarChar(255)  // メールは最大255文字
  password    String? @db.VarChar(100)  // 通常登録のパスワード（bcryptは60文字）
  provider    String? @db.VarChar(50)  // Google, GitHub など
  providerId  String? @unique @db.VarChar(100)  // ソーシャルログインID
  createdAt   DateTime @default(now())
}